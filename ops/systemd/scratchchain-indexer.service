[Unit]
Description=ScratchChain Indexer
After=network.target

[Service]
Type=simple
User=scratchchain
WorkingDirectory=/opt/scratchchain
EnvironmentFile=/etc/scratchchain.env
ExecStart=/usr/bin/python3 -m scratchchain --data-dir ${DATA_DIR} indexer --host ${INDEXER_HOST} --port ${INDEXER_PORT}
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
