[Unit]
Description=ScratchChain Node
After=network.target

[Service]
Type=simple
User=scratchchain
WorkingDirectory=/opt/scratchchain
EnvironmentFile=/etc/scratchchain.env
ExecStart=/usr/bin/python3 -m scratchchain --data-dir ${DATA_DIR} node --host ${P2P_HOST} --port ${P2P_PORT} --rpc-host ${RPC_HOST} --rpc-port ${RPC_PORT} --mine --miner-wallet ${WALLET}
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
